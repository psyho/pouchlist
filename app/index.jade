doctype html
html
  head
    meta(charset='utf-8')
    title PouchDB + AngularJS + RxJS TodoMVC
    link(rel='stylesheet', href='css/base.css')
  body
    section#todoapp
      header#header
        h1 todos
        form#todo-form
          input#new-todo(type='text', placeholder='What needs to be done?', autofocus)
      section#main
        ul#todo-list
          li
            input.toggle(type="checkbox")
            label Not done
            button.destroy
          li.completed
            input.toggle(type="checkbox")
            label Done
            button.destroy
        input#toggle-all(type='checkbox')
      footer#footer
        span#todo-count
          strong 1
          |  todos left
        ul#filters
          li
            a.selected(href='#/') All
          li
            a(href='#/active') Active
          li
            a(href='#/completed') Completed
        button#clear-completed
          | Clear completed (1)
    footer#info
      p Double-click to edit a todo

    script(src='js/vendor.js')
    script(src='js/app.js')
